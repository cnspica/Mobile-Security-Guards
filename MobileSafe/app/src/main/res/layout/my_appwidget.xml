<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fangyi="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_background"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_fresh_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/widget_fresh_black"/>

    <RelativeLayout
        android:id="@+id/btn_clear"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/fast_clean_fresh_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/fast_clean_fresh_white"/>

        <ImageView
            android:id="@+id/widget_ala"
            android:background="@drawable/widget_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/widget_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/widget_black"/>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_clear"
        android:layout_toRightOf="@id/widget_fresh_black">

        <ProgressBar
            android:id="@+id/pb_appwidget"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/widget_progress"
            />


        <TextView
            android:id="@+id/tv_appwidget_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="RAM Used:289MB"
            android:textColor="#ffffff"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_appwidget_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Free:289MB"
            android:textColor="#77000000"
            android:textSize="10sp"/>

    </RelativeLayout>


</RelativeLayout>